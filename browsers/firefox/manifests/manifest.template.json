{
    "manifest_version": 2,
    "name": "SyncShare",
    "description": "Synchronize and share right answers to Moodle quizzes.",
    "icons": {
        "16": "icons/syncshare_16x16.png",
        "24": "icons/syncshare_24x24.png",
        "32": "icons/syncshare_32x32.png",
        "64": "icons/syncshare_64x64.png",
        "128": "icons/syncshare_128x128.png"
    },
    "content_security_policy": "default-src 'self'",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "include_globs": [
                "*mod/quiz/attempt.php*",
                "*mod/quiz/review.php*"
            ],
            "js": [
                "quizContentScript.js"
            ],
            "css": [
                "styles/magic-button.css",
                "styles/context-menu.css"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "page": "background.html"
    }
}